<!-- Skrypt do dynamicznego dodawania wpisów -->
<script>
document.getElementById('new-post-form').addEventListener('submit', function(e){
    e.preventDefault();

    const title = document.getElementById('post-title').value;
    const category = document.getElementById('post-category').value;
    const image = document.getElementById('post-image').value;
    const content = document.getElementById('post-content').value;

    const postContainer = document.getElementById('blog-posts');
    const article = document.createElement('article');
    article.className = 'bg-gray-900 border border-gray-800 rounded-2xl shadow-2xl hover:shadow-gold/20 transition-all duration-500 hover:-translate-y-2 overflow-hidden';
    article.innerHTML = `
        <div class="relative overflow-hidden">
            <img src="${image}" class="w-full h-48 object-cover transition-transform duration-700 hover:scale-110">
            <div class="absolute top-4 left-4">
                <span class="bg-gold-500 text-black px-3 py-1 rounded-full text-sm font-bold">${category}</span>
            </div>
        </div>
        <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-3">${title}</h3>
            <p class="text-gray-400 mb-4 line-clamp-3">${content}</p>
        </div>
    `;
    postContainer.appendChild(article);

    this.reset();
});
</script>
